<div class="header">
  <div class="container">
    <h1>New message</h1>
  </div>
</div>

<div class="messages">
  <div class="container">

    <%= form_for(@message) do |f| %>
      <div class="field">
        <%= f.label :message %><br>
        <%= f.text_area :content %>
      </div>
      <div class="actions">
        <%= f.submit "Create" %>
      </div>
    <% end %>

  </div>
</div>
